<div class="md:w-3/4 my-5 mx-auto">
  <div class="mx-auto w-full max-w-sm my-12">
    <%= form_with model: @user, url: mypage_profile_path, local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
        <div class="">
          <div class="pt-5 pb-2">
            <%= f.label :last_name, "姓" %>
          </div>
          <%= f.text_field :last_name, class: 'rounded border border-gray-200 p-1', size: 30 %>
        </div>

        <div class="">
          <div class="pt-5 pb-2">
            <%= f.label :first_name, "名" %>
          </div>
          <%= f.text_field :first_name, class: 'rounded border border-gray-200 p-1', size: 30 %>
        </div>

        <div class="">
          <div class="pt-5 pb-2">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <%= f.email_field :email, class: 'rounded border border-gray-200 p-1', size: 30 %>
        </div>

        <div class="my-8">
          <button>
            <%= f.submit '更新', class: "bg-green-400 hover:bg-green-300 text-white rounded px-3 py-2 my-1" %>
          </button>
        </div>
      <% end %>
  </div>
</div>