<div class =" w-full">
  <% if  %w[admin_colors].any? {|name| current_page?(send("#{name}_path"))} %>
    <button class="text-white my-2 w-12">
      <%= link_to "編集", edit_admin_color_path(palette), class:"bg-green-400 hover:bg-green-300 px-2 py-2 rounded", data: {"turbolinks" => false} %>
    </button>
    <button class="text-white rounded my-2 w-12">
      <%= link_to "削除", admin_color_path(palette), class:"bg-red-500 hover:bg-red-400 px-2 py-2 rounded", method: :delete, data: { confirm: "削除してもよろしいですか？" } %>
    </button>
  <% elsif current_page?(mypage_colors_path) %>
    <button class="text-white my-2 w-12">
      <%= link_to '詳細', palette_path(palette), class:"bg-green-400 hover:bg-green-300 px-2 py-2 rounded", data: {"turbolinks" => false} %>
    </button>
    <button class="text-white rounded my-2 w-12">
      <%= link_to '削除', palette_path(palette), class:"bg-red-500 hover:bg-red-400 px-2 py-2 rounded", method: :delete, data: { confirm: "削除してもよろしいですか" } %>
    </button>
  <% elsif %w[mypage_palettes_likes palettes].any? {|name| current_page?(send("#{name}_path"))} %>
    <%= render 'shared/unlike_detail_button', palette: palette %>
  <% elsif current_user&.own?(palette) %>
    <button class="bg-red-500 hover:bg-red-400 text-white rounded px-3 py-2">
      <%= link_to '削除', palette_path(palette), method: :delete, data: { confirm: "削除してもよろしいですか" } %>
    </button>
  <% else %>
    <%= render 'shared/like_button', palette: palette %>
  <% end %>
</div>