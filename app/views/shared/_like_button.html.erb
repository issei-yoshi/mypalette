<% if current_user.like?(palette) %>
  <%= link_to palette_like_path(palette_id: palette.id, id: current_user.likes.find_by(palette_id: palette.id)), method: :delete do %>
    <i class="fa-solid fa-heart"></i>
  <% end %>
<% else %>
  <%= link_to palette_likes_path(palette), method: :post do %>
    <i class="fa-regular fa-heart"></i>
  <% end %>
<% end %>