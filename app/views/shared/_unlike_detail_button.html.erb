<% if current_user.like?(palette) %>
  <button class="bg-green-400 hover:bg-green-300 text-white rounded px-3 py-2 my-1">
      <%= link_to '詳細', palette_path(palette), data: {"turbolinks" => false} %>
  </button>
  <%= link_to "スキ解除", palette_like_path(palette_id: palette.id, id: current_user.likes.find_by(palette_id: palette.id)), method: :delete %>
<% else %>
  <button class="bg-green-400 hover:bg-green-300 text-white rounded px-3 py-2 my-1">
      <%= link_to '詳細', palette_path(palette), data: {"turbolinks" => false} %>
  </button>
  <%= link_to "スキ", palette_likes_path(palette), method: :post %>
<% end %>