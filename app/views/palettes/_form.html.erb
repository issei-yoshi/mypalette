<%= form_with model: palette, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="sm:flex justify-between my-5">

    <div class="border border-b-2 m-2 lg:p-4 bg-gray-50 hover:bg-white">
      <div class="flex ">
        <div class="px-3 my-auto w-4/6">
          <%= f.label :main, "Main Color" %>
        </div>
        <div>
          <%= f.color_field :main, class: "main-color colorinput my-auto", value: palette.main %>
        </div>
      </div>
      <div class="text-center">
        <%= palette.main %>
      </div>
    </div>

    <div class="border border-b-2 m-2 lg:p-4 bg-gray-50 hover:bg-white">
      <div class="flex ">
        <div class="px-3 my-auto w-4/6">
          <%= f.label :sub, "Sub Color" %>
        </div>
        <div>
          <%= f.color_field :sub, class: "sub-color colorinput my-auto", value: palette.sub %>
        </div>
      </div>
      <div class="text-center">
        <%= palette.sub %>
      </div>
    </div>

    <div class="border border-b-2 m-2 lg:p-4 bg-gray-50 hover:bg-white">
      <div class="flex ">
        <div class="px-3 my-auto w-4/6">
          <%= f.label :body, "Body Color" %>
        </div>
        <div>
          <%= f.color_field :body, class: "body-color colorinput my-auto", value: palette.body %>
        </div>
      </div>
      <div class="text-center">
        <%= palette.body %>
      </div>
    </div>

    <% if %w[root new_palette].any? {|name| current_page?(send("#{name}_path"))} %>
      <div class="px-5 my-auto">
        <%= f.submit %>
      </div>
    <% end %>

    <% if current_user&.own?(palette) %>
      <%= link_to '削除', palette_path(palette), method: :delete, data: { confirm: "削除しますか?" } %>
    <% end %>

  </div>
<% end %>