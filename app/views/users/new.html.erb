<div class="w-full max-w-sm my-12">
<%= form_with model: @user, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="">
      <div class="pt-5 pb-2">
        <%= f.label :name, "名前" %>
      </div>
      <%= f.text_field :name, class: 'rounded border border-gray-200 p-1' %>
    </div>

    <div class="">
      <div class="pt-5 pb-2">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <%= f.email_field :email, class: 'rounded border border-gray-200 p-1' %>
    </div>

    <div class="">
      <div class="pt-5 pb-2">
        <%= f.label :password, "パスワード" %>
      </div>
      <%= f.password_field :password, class: 'rounded border border-gray-200 p-1' %>
    </div>

    <div class="">
      <div class="pt-5 pb-2">
        <%= f.label :password_confirmation, "パスワード確認" %>
      </div>
      <%= f.password_field :password_confirmation, class: 'rounded border border-gray-200 p-1' %>
    </div>

    <div class="my-8">
      <%= f.submit '登録' %>
    </div>
  <% end %>
</div>
</div>