<div class="w-full max-w-sm my-12">
<%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <div class="">
      <div class="pt-5 pb-2">
        <%= f.label :name, "名前" %>
      </div>
      <%= f.text_field :name, class: 'rounded border border-gray-200 p-1' %>
    </div>

    <div class="">
      <div class="pt-5 pb-2">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <%= f.email_field :email, class: 'rounded border border-gray-200 p-1' %>
    </div>

    <div class="my-8">
      <%= f.submit '更新' %>
    </div>
  <% end %>
  <%= link_to "戻る", admin_users_path %>
</div>
</div>