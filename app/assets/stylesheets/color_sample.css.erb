.main-container {
  background-image: url("<%= asset_path('black.jpeg') %>");
  height: 500px;
  background-size:cover;
}

@media screen and (min-width:768px) {
  .parent {
    position: relative;
  }

  .child {
    width: 40%;
    position: absolute;
    top: 20%;
    left: 15%;
  }
}

@media screen and (max-width:767px) {
  .child {
    width: 80%;
    position: absolute;
    top: 30%;
    left: 10%;
  }
  .no_display{
    display:none;
  }
}

.parent1 {
  width: 100%;
  position: relative;
}

.child-img{
  position: relative;
  z-index: 2;
}

.parent1 img{
  width: 70%;
}

.child1 {
  width: 70%;
  height: 100%;
  position: absolute;
  top: 3%;
  left: 3%;
  z-index: 1;
}